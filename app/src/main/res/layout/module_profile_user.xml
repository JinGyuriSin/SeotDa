<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/mtrl_card_spacing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_profile_user"
        app:layout_constraintHeight_percent="0.8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cl_right"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="아이디"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30dp"
                android:textSize="10sp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.7"/>

            <TextView
                android:id="@+id/tv_money_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="보유금"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30dp"
                android:textSize="10sp"
                android:gravity="center"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cl_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_right_top"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constrainedHeight="true"
                app:layout_constraintVertical_weight="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/iv_first_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_red_light"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/iv_second_card"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:id="@+id/iv_second_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_red_light"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_first_card"
                    app:layout_constraintRight_toLeftOf="@id/iv_third_card"

                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_third_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_red_light"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_second_card"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:id="@+id/tv_jogbo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="족보"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30dp"
                android:textSize="10sp"
                android:gravity="center"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1,000,000원"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30dp"
                android:textSize="10sp"
                android:gravity="center"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>