<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainTheme"
        tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_user_first"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <include
            layout="@layout/profile_user"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_uesr_second"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <include
                layout="@layout/profile_user"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_user_third"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <include
                layout="@layout/profile_user"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/profile_bg"
            app:layout_constraintWidth_percent="0.14"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_money_title"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:text="보유금"-->
            <!--android:gravity="center"-->
            <!--android:autoSizeTextType="uniform"-->
            <!--android:autoSizeMaxTextSize="30dp"-->
            <!--android:textSize="10sp"-->
            <!--app:layout_constraintWidth_percent="0.14"-->
            <!--app:layout_constraintHeight_percent="0.2"-->
            <!--app:layout_constraintVertical_bias="0.65"-->
            <!--app:layout_constraintHorizontal_bias="0.2"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"/>-->

        <TextView
                android:id="@+id/tv_money"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="1,000,000원"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.14"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_palyer_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
            android:id="@+id/iv_first_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorRed"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_second_card"
            app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
            android:id="@+id/iv_second_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorRed"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_first_card"
            app:layout_constraintRight_toLeftOf="@id/iv_third_card"
            app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
            android:id="@+id/iv_third_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorRed"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_second_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
                android:id="@+id/lv_jogbo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:entries="@array/jogboarray"
                android:layout_marginTop="5dp"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl_palyer_card">
        </ListView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="런"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="콜"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="다이"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>